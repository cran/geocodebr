Type: Package
Package: geocodebr
Title: Geolocalização De Endereços Brasileiros (Geocoding Brazilian
        Addresses)
Version: 0.2.0
Authors@R: c(
    person("Rafael H. M.", "Pereira", , "rafa.pereira.br@gmail.com", role = c("aut", "cre"),
           comment = c(ORCID = "0000-0003-2125-7465")),
